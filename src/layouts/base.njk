<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="canonical" href="{{ page.url | url | absoluteUrl(site.url) }}">

    {% bundledcss %}

    <title>
        {{ title | escape }}
        {% if title %}
            | {{ site.name }}
        {% else %}
            {{ site.name }}
        {% endif %}
    </title>

    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">

    {% set desc = site.description %}
    {% if not desc %}
        {% set desc = content | striptags | truncate(140) %}
    {% endif %}
    {% if desc %}
        <meta name="description" content="{{ desc | escape }}">
    {% endif %}
</head>
<body>
    <div class="layout-wrapper">

        <header class="header">
            <div class="header__content">
            <h1 class="site-title">
                <a href="{{ '/' | url }}">
                {{site.name}}
                </a>
            </h1>

            {% if site.headerLinks %}
                <nav class="nav">
                    <ul class="nav__list">
                        {% for item in site.headerLinks %}
                        {% set currentAttribute = '' %}
                        {% set externalAttribute = '' %}

                        {% if item.external %}
                            {% set externalAttribute = 'target="_blank" rel="noopener noreferrer"' %}
                        {% endif %}

                        {% if page.url == item.url %}
                            {% set currentAttribute = 'aria-current="page"' %}
                        {% endif %}

                        <li class="nav-item">
                            <a href="{{ item.url | url }}" {{ currentAttribute | safe }} {{ externalAttribute | safe }}>{{ item.text }}</a>
                        </li>
                        {% endfor %}
                    </ul>
                </nav>

            {% endif %}

            </div>
        </header>

        <main class="main">
            {{ content | safe }}
        </main>

        <footer class="footer">
            <div class="footer__content">

                <ul class="hero__social-links">
                    {% if site.socialLinks %}
                    {% for item in site.socialLinks %}
                        {% set externalAttribute = '' %}

                        {% if item.external %}
                        {% set externalAttribute = 'target="_blank" rel="noopener noreferrer"' %}
                        {% endif %}

                        <li>
                        <a href="{{ item.url | url }}" {{ externalAttribute | safe }} >{{ item.text }}</a>
                        </li>
                    {% endfor %}
                    {% endif %}

                    {% if site.footerLinks %}

                    {% for item in site.footerLinks %}
                        {% set externalAttribute = '' %}

                        {% if item.external %}
                        {% set externalAttribute = 'target="_blank" rel="noopener noreferrer"' %}
                        {% endif %}

                        <li>
                        <a href="{{ item.url | url }}" {{ externalAttribute | safe }} >{{ item.text }}</a>
                        </li>
                    {% endfor %}
                    {% endif %}
                </ul>

                {% if site.showFooterAttribution %}
                    <p class="footer__attribution">
                        &copy; {{ site.currentYear }} {{ site.author.name }}
                    </p>
                {% endif %}
            </div>
        </footer>
    </div>

    {% bundledjs %}
</body>
</html>
