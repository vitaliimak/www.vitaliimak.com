<article>
    {% if post %}
        <h1><a href="{{ post.url }}">{{ post.data.title }}</a></h1>
        <p>{{ post.data.date | readableDate }}</p>
        <div>
            {{ post.templateContent | safe }}
        </div>
    {% else %}
        <h1>{{ title }}</h1>
        <p>{{ date | readableDate }}</p>
        <div>
            {{ content | safe }}
        </div>
    {% endif %}
</article>
