# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
indent_size = 2
max_line_length = 120

[*.{html,ejs,java,njk}]
indent_size = 4

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*xml]
insert_final_newline = false
