---
layout: base
---
<ul class="article-list">
    {% for post in collections.posts | reverse -%}
        <li class="article-item">
            <div class="article-date">{{ post.data.date | readableDate }}</div>
            <div class="article-title">
                <a href="{{ post.url }}">{{ post.data.title }}</a>
            </div>
        </li>
    {%- endfor %}
</ul>
