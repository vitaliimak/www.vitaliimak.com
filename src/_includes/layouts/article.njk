<section class="py-3">
    <article class="bg-white shadow overflow-hidden sm:rounded-lg">
        {% if post %}
            <div class="px-4 py-5 sm:px-6">
                <h1 class="text-lg leading-6 font-medium text-gray-900"><a href="{{ post.url }}">{{ post.data.title }}</a></h1>
                <p class="mt-1 max-w-2xl text-sm text-gray-500">{{ post.data.date | readableDate }}</p>
            </div>
            <div class="border-t border-gray-300">
                <div class="px-4 py-5">
                    {{ post.templateContent | safe }}
                </div>
            </div>
        {% else %}
            <div class="px-4 py-5 sm:px-6">
                <h1 class="text-lg leading-6 font-medium text-gray-900">{{ title }}</h1>
                <p class="mt-1 max-w-2xl text-sm text-gray-500">{{ date | readableDate }}</p>
            </div>
            <div class="border-t border-gray-300">
                <div class="px-4 py-5">
                    {{ content | safe }}
                </div>
            </div>
        {% endif %}
    </article>

</section>
